        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="8dp"
        >


        <TextView
            android:id="@+id/startend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Januari 2020 - 13 Januari 2020"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/startend_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 - 05:30"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGoToDetailHistorySleep"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                app:strokeColor="@color/blue_600"
                android:text="See Detail" />
        </RelativeLayout>


    </LinearLayout>

